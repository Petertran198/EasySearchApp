<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

	<ItemGroup>
		<!-- Duende.IdentityModel: Helper tools for reading and working with JWT tokens.
         Like a "JWT toolkit" - helps you peek inside tokens, parse claims, 
         and work with OAuth servers if needed. -->
		<PackageReference Include="Duende.IdentityModel" Version="8.0.0" />

		<!-- Microsoft.AspNetCore.Authentication.JwtBearer: The "bouncer at the door".
         Checks if the JWT token in each request is valid before letting it through.
         Makes sure the token isn't fake, expired, or tampered with. -->
		<PackageReference Include="Microsoft.AspNetCore.Authentication.JwtBearer" Version="8.0.22" />

		<!-- Ocelot API Gateway use to route to correct microservice. -->
		<PackageReference Include="Ocelot" Version="24.0.1" />
	</ItemGroup>

</Project>
